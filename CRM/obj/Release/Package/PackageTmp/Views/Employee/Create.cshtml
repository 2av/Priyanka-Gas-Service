<!-- Inline Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Add New
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="~/Employee/Index">Employee Details</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                @using (Html.BeginForm())
                {
                    <div class="row clearfix">
                        @Html.HiddenFor(m => m.Employeeid, new { @class = "form-control" })
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.EmployeeCode, new { @class = "form-control" })
                                    <label class="form-label">Employee Code </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                    <label class="form-label">First Name</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                    <label class="form-label">Last Name</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.Mobileno, new { @class = "form-control" })
                                    <label class="form-label">Mobile No</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.AlternateNo, new { @class = "form-control" })
                                    <label class="form-label">Alternate No</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                                    <label class="form-label">Address</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <label class="form-label">* Gas Company Name</label>
                                @Html.DropDownListFor(x => x.GasCompanyTypeId, new SelectList(ViewBag.GasCompanyType, "Text", "Value"), "Select Gas Company Name", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.Position, new { @class = "form-control" })
                                    <label class="form-label">Position</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-line">
                                <label class="form-label">Gas Delivery Man</label>
                                @if (Model.IsGasDeliveryMan == true)
                                {
                                    <input type="radio" id="IsGasDeliveryManYes" name="IsGasDeliveryMan" checked class="form-control" />
                                    <label class="form-label">Yes</label>
                                    <input type="radio" id="IsGasDeliveryManNo" name="IsGasDeliveryMan" class="form-control"/>
                                    <label class="form-label">No</label>
                                }
                                else
                                {
                                    <input type="radio" id="IsGasDeliveryManYes" name="IsGasDeliveryMan"  class="form-control" />
                                    <label class="form-label" for="IsGasDeliveryManYes">Yes</label>
                                    <input type="radio" id="IsGasDeliveryManNo" name="IsGasDeliveryMan" checked class="form-control" />
                                    <label class="form-label" for="IsGasDeliveryManNo">No</label>
                                }

                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <img src="~/Uploads/@Model.ProfileImage" style="width:300px"/>
                            <input type="hidden" value="@Model.ProfileImage" id="ProfileImage"/>
                            <input type="file"
                                   class="filepond"
                                   name="filepond"
                                   accept="image/png, image/jpeg, image/gif" />
                        </div>
                       


                        <div class="btn btn-primary" onclick="SaveData()">Save Employee</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- #END# Inline Layout | With Floating Label -->

