<!-- Jquery Core Js -->

<script>
    function setdefaultimage() {
        $("#profileimg").attr("src", "~/Content/Images/Icard/default.png");
    }
    function SaveData() {
        
        var Employeeid = $("#Employeeid").val().trim();
        var EmployeeCode = $("#EmployeeCode").val().trim();
        var FirstName = $("#FirstName").val().trim();
        var LastName = $("#LastName").val().trim();
        var Mobileno = $("#Mobileno").val().trim();
        var AlternateNo = $("#AlternateNo").val().trim();
        var Address = $("#Address").val().trim();
        var Position = $("#Position").val().trim();
        var ProfileImage = $("#ProfileImage").val();
        var GasCompanyTypeId = $("#GasCompanyTypeId").val().trim();
        var IsGasDeliveryMan = ($("#IsGasDeliveryManYes").is(":checked")) ? true : false;

        if (FirstName == "") {
            alert("Please Enter First Name");
            $("#FirstName").focus();
            return;
        }
        if (FirstName == "") {
            alert("Please Enter Last Name");
            $("#FirstName").focus();
            return;
        }
        if (Mobileno == "") {
            alert("Please Enter Mobile no");
            $("#Mobileno").focus();
            return;
        }
        if (ProfileImage == "") {
            alert("Please select Profile Image");
            $("#ProfileImage").focus();
            return;
        }
        $(".page-loader-wrapper").show();

      
        var data = {
            Employeeid:Employeeid,
            EmployeeCode: EmployeeCode,
            FirstName: FirstName,
            LastName: LastName,
            Mobileno: Mobileno,
            AlternateNo:AlternateNo,
            Address:Address,
            Position:Position,
            ProfileImage:ProfileImage,
            GasCompanyTypeId: GasCompanyTypeId,
            IsGasDeliveryMan: IsGasDeliveryMan
        }
        $.ajax({
            type: "POST",
            url: "/Employee/SaveData",
            data: JSON.stringify(data),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                $(".page-loader-wrapper").hide();
                alert(data);
                location.reload();
            }
        });

    }

$(document).ready(function(){
    $('#btnUpload').click(function () {

        // Checking whether FormData is available in browser
        if (window.FormData !== undefined) {

            var fileUpload = $("#FileUpload1").get(0);
            var files = fileUpload.files;

            // Create FormData object
            var fileData = new FormData();

            // Looping over all files and add it to FormData object
            for (var i = 0; i < files.length; i++) {
                fileData.append(files[i].name, files[i]);
            }

            // Adding one more key to FormData object
            fileData.append('username', 'priyanka');

            $.ajax({
                url: '/Employee/UploadFiles',
                type: "POST",
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                data: fileData,
                success: function (result) {
                    console.log(result);
                    
                    if(result.split('|').length > 1)
                    {
                        var img = result.split('|')[1];
                        result = result.split('|')[0];
                        $("#ProfileImage").val(img);
                        $("#profileimg").attr("src", "/Uploads/" + img);
                    }
                    else {
                        $("#profileimg").attr("src", "/Content/Images/Icard/default.png");
                    }
                    
                    alert(result);
                },
                error: function (err) {
                    alert(err.statusText);
                }
            });
        } else {
            alert("FormData is not supported.");
        }
    });
});
</script>  


