@model CRM.Models.ViewModel.vmBuyProduct
@{
    ViewBag.Title = "BuyProductBill";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bill</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
		.txt-line
		{
			border-top: none;
			border-left: none;
			border-right: none;
		}
		.table
		{
			margin-bottom:0px;
		}
		.container
		{
			margin-top:40px;
			margin-bottom:40px;
		}
		body
		{
			color:#131129 !important;
		}
		.table>tbody>tr>td
		{
			border-top:none;
		}
		
    </style>
</head>
<body>
    <div class="container">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td colspan="2">
                                        <p style="font-size:25px;font-weight:bold;text-align:center;color: #e43d04;">
                                            PRIYANKA GAS SERVICE
                                        </p>
                                        <p style="font-size:25px;font-weight:bold;text-align:center;color: #0a016b;">
                                            NEW MAHANAGER MARKETING SERVICE
                                        </p>
                                        <p style="font-size:20px;text-align:center;color: #0a016b;">
                                            AUTHORISED DISTRIBUTORSHIP OF GAS POINT DOMESTIC 7 COMMERCIAL
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:20%;text-align:right;">
                                        <img src="~/Content/Images/logo/gaspointwithbottle.png" style="width:165px;">
                                    </td>
                                    <td>
                                        <div class="col-lg-9">
                                            <p id="alltxt" style="font-size:18px;text-align:center;color:#131129;font-weight:bold;">
                                                (Mumbai)Mob.: 9320102179 / 9324779814 / 9819933648<br>
                                                ALL OVER MUMBAI (Commercial / Domestic Gas)<br>
                                                SUBSCRIPTION VOUCHER
                                            </p>
                                        </div>
                                        <div class="col-lg-3">
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                    
                </tr>
                <tr>
                    <td>
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td style="border:none" ><span class="content-title">Invoice No.:</span> @Model.InvoiceNo</td>
                                    <td style="border:none" class="right"><span  class="content-title">Invoice Date:</span>@Model.CreatedDate</td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>
                                       <span  class="content-title"> Name: </span>
                                        @Model.SellerName
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span class="content-title">Company Name:</span>
                                        @Model.CompanyName
                                    </td>
                                </tr>
                                <tr>

                                    <td>
                                        <span class="content-title">Address:</span>
                                        @Model.Address
                                    </td>
                                    
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="text-align:center; width:65px">Sr. No.</th>
                    <th style="text-align:center;">Product Name</th>
                    <th style="text-align:center;">Product Price</th>
                    <th style="text-align:center;">Quantity</th>
                    <th style="text-align:center;">Total</th>
                </tr>
            </thead>
            <tbody>
                @{
                    double Total = 0;
                    int count = 0;
                }
                @if (Model.BuyProductItems != null) {
                    foreach (var item in Model.BuyProductItems)
                    {
                        count++;

                    <tr style="text-align:center">
                        <td>@count</td>
                        <td>@item.ProductName</td>
                        <td>@item.ProductPrice</td>
                        <td>@item.Quantity</td>
                        <td>@(item.ProductPrice*item.Quantity)</td>
                    </tr>
                    
                  }
               <tr>
                    <td colspan="4" style="text-align:right;font-size:16px;font-weight:bold;">Total:</td>
                    <td style="text-align:center">@Model.Total</td>
                </tr>
                }
            </tbody>

        </table>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td style="width:70%;">
                        <p>
                            <b>Business Terms:</b><br>
                            1.Responsibility Ceases On Delivery Of Goods to the Carriers and any Claim of Shortage or rejection not informed within a week will be invalid.<br>
                            2.Goods once Sold will not be taken back.<br>
                            3.All Disputes are Subject to Delhi Jurisdiction.<br>
                            Ptd.by:Brave print Care Process G-1/152, Uttam nagar Bill Pld. (Sr.No. 001 to 400) Total Books: 8 No.<br>
                            <b>Original: White &nbsp;&nbsp;&nbsp;&nbsp; Duplicate:Pink &nbsp;&nbsp;&nbsp;&nbsp; Triplicate Yellow</b>&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;  <b>E. & O.E. </b>
                        </p>
                    </td>
                    <td>
                        <p style="height:110px;text-align:center;">
                            For  <b>NEW MAHANAGER MARKETING SERVICE</b>
                        </p>
                        <p style="text-align:center;">
                            Auth. Signature
                        </p>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>



