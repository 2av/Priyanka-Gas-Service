<div class="block-header">
    <h2>
        Seller Details
        @*<small>Taken from <a href="https://datatables.net/" target="_blank">datatables.net</a></small>*@
    </h2>
</div>
<!-- Inline Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                @if (Model.ID > 0)
                {

                    <h2>Edit</h2>
                }
                else
                {

                    <h2>New</h2>
                }
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="~/SellerDetails/Index">View Seller Detials</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                @using (Html.BeginForm())
                {
                    <div class="row clearfix">
                        @Html.HiddenFor(m => m.ID, new { @class = "form-control" })
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                    <label class="form-label">First Name</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                    <label class="form-label">Last Name</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                                    <label class="form-label">Address</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control" })
                                    <label class="form-label">Phone Number</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.AlternateNo, new { @class = "form-control" })
                                    <label class="form-label">Alternate Number</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                                    <label class="form-label">Company Name</label>
                                </div>
                            </div>
                        </div>
                        <div class="btn btn-primary" onclick="SaveData()">Save Seller Details</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- #END# Inline Layout | With Floating Label -->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/scripts/CommonScripts.js"></script>
<!-- Jquery Core Js -->

<script>

    function SaveData() {
        var ID = $("#ID").val().trim();
        var FirstName = $("#FirstName").val().trim();
        var LastName = $("#LastName").val().trim();
        var Address = $("#Address").val().trim();
        var PhoneNo = $("#PhoneNo").val().trim();
        var AlternateNo = $("#AlternateNo").val().trim();
        var CompanyName = $("#CompanyName").val().trim();
        
        if (FirstName == "") {
            alert("Please Enter First Name");
            $("#FirstName").focus();
            return;
        }
        if (Address == "") {
            alert("Please Enter Address");
            $("#Address").focus();
            return;
        }
        if (PhoneNo == "") {
            alert("Please Enter Phone Number");
            $("#PhoneNo").focus();
            return;
        }
        if (CompanyName == "") {
            alert("Please Enter Company Name");
            $("#CompanyName").focus();
            return;
        }
        $(".page-loader-wrapper").show();
        var data = {
            ID:ID,
            FirstName: FirstName,
            LastName: LastName,
            Address: Address,
            PhoneNo: PhoneNo,
            AlternateNo: AlternateNo,
            CompanyName: CompanyName
        }
        $.ajax({
            type: "POST",
            url: "/SellerDetails/SaveData",
            data: JSON.stringify(data),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                $(".page-loader-wrapper").hide();
                alert(data);
                location.reload();
            }
        });

    }
</script>

