        h6 {
            padding: 5px;
            font-size: larger;
            margin-right: 50px;
        }

        .form-group .form-line {
            width: 98%;
            position: relative;
            border: 1px solid #ddd;
            margin: 15px auto;
        }
    </style>
</div>
<div class="block-header">
    <h2>
        Stock Replacement
        @*<small>Taken from <a href="https://datatables.net/" target="_blank">datatables.net</a></small>*@
    </h2>
</div>
<!-- Inline Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Add New
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="~/GasStock/StockReplacementDetails">View Stock Replacement Details</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                @using (Html.BeginForm())
                {
                    <table>
                        <tr>
                            <th>Type</th>
                            <th>10KG</th>
                            <th>15KG</th>
                            <th>17KG</th>
                            <th>19KG</th>
                        </tr>
                        <tr>
                            <td><h6>Full Replacement</h6></td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._10KG, new { @class = "form-control", @id = "_10KG_fullreplacement" })

                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._15KG, new { @class = "form-control", @id = "_15KG_fullreplacement" })

                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._17KG, new { @class = "form-control", @id = "_17KG_fullreplacement" })

                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._19KG, new { @class = "form-control", @id = "_19KG_fullreplacement" })

                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td><h6>Replacement Old</h6></td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._10KG, new { @class = "form-control", @id = "_10KG_rplacementold" })

                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._15KG, new { @class = "form-control", @id = "_15KG_rplacementold" })

                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._17KG, new { @class = "form-control", @id = "_17KG_rplacementold" })

                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._19KG, new { @class = "form-control", @id = "_19KG_rplacementold" })

                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td><h6>Body lickage</h6></td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._10KG, new { @class = "form-control", @id = "_10KG_bodylickage" })

                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._15KG, new { @class = "form-control", @id = "_15KG_bodylickage" })

                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._17KG, new { @class = "form-control", @id = "_17KG_bodylickage" })

                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        @Html.TextBoxFor(m => m._19KG, new { @class = "form-control", @id = "_19KG_bodylickage" })

                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <div class="btn btn-primary" onclick="SaveData()">Add Stock Replacement</div>
                }
            </div>

        </div>
    </div>
</div>
</div>
<!-- #END# Inline Layout | With Floating Label -->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/scripts/CommonScripts.js"></script>
<!-- Jquery Core Js -->

<script>

    function SaveData() {
        var _10KG_fullreplacement = parseInt($("#_10KG_fullreplacement").val());
        var _15KG_fullreplacement = parseInt($("#_15KG_fullreplacement").val());
        var _17KG_fullreplacement = parseInt($("#_17KG_fullreplacement").val());
        var _19KG_fullreplacement = parseInt($("#_19KG_fullreplacement").val());

        if (isNaN(_10KG_fullreplacement)) {
            alert('Please enter value in 10KG of Full Replacement');
            return;
        }
        if (isNaN(_15KG_fullreplacement)) {
            alert('Please enter value in 15KG of Full Replacement');
            return;
        }
        if (isNaN(_17KG_fullreplacement)) {
            alert('Please enter value in 17KG of Full Replacement');
            return;
        }
        if (isNaN(_19KG_fullreplacement)) {
            alert('Please enter value in 19KG of Full Replacement');
            return;
        }
        /*-------------------------------*/

        var _10KG_rplacementold = parseInt($("#_10KG_rplacementold").val());
        var _15KG_rplacementold = parseInt($("#_15KG_rplacementold").val());
        var _17KG_rplacementold = parseInt($("#_17KG_rplacementold").val());
        var _19KG_rplacementold = parseInt($("#_19KG_rplacementold").val());

        if (isNaN(_10KG_rplacementold)) {
            alert('Please enter value in 10KG of Replacement Old');
            return;
        }
        if (isNaN(_15KG_rplacementold)) {
            alert('Please enter value in 15KG of Replacement Old');
            return;
        }
        if (isNaN(_17KG_rplacementold)) {
            alert('Please enter value in 17KG of Replacement Old');
            return;
        }
        if (isNaN(_19KG_rplacementold)) {
            alert('Please enter value in 19KG of Replacement Old');
            return;
        }

        /*-------------------------------------*/
        

        var _10KG_bodylickage = parseInt($("#_10KG_bodylickage").val());
        var _15KG_bodylickage = parseInt($("#_10KG_bodylickage").val());
        var _17KG_bodylickage = parseInt($("#_10KG_bodylickage").val());
        var _19KG_bodylickage = parseInt($("#_10KG_bodylickage").val());

        if (isNaN(_10KG_bodylickage)) {
            alert('Please enter value in 10KG of Body lickage');
            return;
        }
        if (isNaN(_10KG_bodylickage)) {
            alert('Please enter value in 15KG of Body lickage');
            return;
        }
        if (isNaN(_10KG_bodylickage)) {
            alert('Please enter value in 17KG of Body lickage');
            return;
        }
        if (isNaN(_10KG_bodylickage)) {
            alert('Please enter value in 19KG of Body lickage');
            return;
        }

        $(".page-loader-wrapper").show();
        var data =[];
        data.push(
            {
                _10KG: _10KG_fullreplacement,
                _15KG: _15KG_fullreplacement,
                _17KG: _17KG_fullreplacement,
                _19KG: _19KG_fullreplacement,
                EntryType: 'Full Replacement',
                EntryFor: 'Stock Replacement'
            });
            data.push(
            {
                _10KG: _10KG_rplacementold,
                _15KG: _15KG_rplacementold,
                _17KG: _17KG_rplacementold,
                _19KG: _19KG_rplacementold,
                EntryType: 'Replacement Old',
                EntryFor: 'Stock Replacement'
            });
            data.push(
            {
                _10KG: _10KG_bodylickage,
                _15KG: _15KG_bodylickage,
                _17KG: _17KG_bodylickage,
                _19KG: _19KG_bodylickage,
                EntryType: 'Body lickage',
                EntryFor: 'Stock Replacement'
            });


        $.ajax({
            type: "POST",
            url: "/GasStock/StockReplacementSave",
            data: JSON.stringify(data),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                $(".page-loader-wrapper").hide();
                alert(data);
                location.reload();
            }
        });

    }
</script>

