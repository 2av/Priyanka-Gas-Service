@model System.Data.DataTable
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}<div class="block-header">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/Content/Theme/Admin/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Waves Effect Css -->
    <link href="~/Content/Theme/Admin/plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/Content/Theme/Admin/plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- JQuery DataTable Css -->
    <link href="~/Content/Theme/Admin/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css" rel="stylesheet">
    <!-- Custom Css -->
    <link href="~/Content/Theme/Admin/css/style.css" rel="stylesheet">
    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="~/Content/Theme/Admin/css/themes/all-themes.css" rel="stylesheet" />
</div>
<div class="block-header">

    <div class="jumbotron"><h1 class="text-center text-primary">Welcome in the Priyanka Gas Service Management</h1></div>
    @foreach (System.Data.DataRow row in Model.Rows)
    {
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-green hover-expand-effect">
                <div class="icon">
                    <i class="material-icons">playlist_add_check</i>
                </div>
                <div class="content">
                    <div class="text">Today Booking</div>
                    <div class="number count-to" data-from="0" data-to="@row["Today Booking"]" data-speed="15" data-fresh-interval="20">@row["Today Booking"]</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-pink hover-expand-effect">
                <div class="icon">
                    <i class="material-icons">playlist_add_check</i>
                </div>
                <div class="content">
                    <div class="text">Yesterday Booking</div>
                    <div class="number count-to" data-from="0" data-to="@row["Yesterday Booking"]" data-speed="15" data-fresh-interval="20">@row["Yesterday Booking"]</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-purple hover-expand-effect">
                <div class="icon">
                    <i class="material-icons">playlist_add_check</i>
                </div>
                <div class="content">
                    <div class="text">This Month Booking</div>
                    <div class="number count-to" data-from="0" data-to="@row["Month Booking"]" data-speed="15" data-fresh-interval="20">@row["Month Booking"]</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-orange hover-expand-effect">
                <div class="icon">
                    <i class="material-icons">playlist_add_check</i>
                </div>
                <div class="content">
                    <div class="text">Total Customer</div>
                    <div class="number count-to" data-from="0" data-to="@row["Total Customer"]" data-speed="15" data-fresh-interval="20">@row["Total Customer"]</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 bg-purple">
            
            <table class="table">
            <caption><h3 style="color:white">Fresh Gas Stock</h3></caption>
                    <tr>
                    <th>10KG</th>
                    <th>15KG</th>
                    <th>17Kg</th>
                    <th>19KG</th>
                </tr>
                <tr>
                    <td>@row["_10kgFresh"]</td>
                    <td>@row["_15kgFresh"]</td>
                    <td>@row["_17kgFresh"]</td>
                    <td>@row["_19kgFresh"]</td>
                </tr>
            </table>
        </div>

    }
</div>

<!-- Jquery Core Js -->
<script src="~/Content/Theme/Admin/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap Core Js -->
<!-- Select Plugin Js -->
<script src="~/Content/Theme/Admin/plugins/bootstrap-select/js/bootstrap-select.js"></script>
<!-- Slimscroll Plugin Js -->
<script src="~/Content/Theme/Admin/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>
<!-- Waves Effect Plugin Js -->
<script src="~/Content/Theme/Admin/plugins/node-waves/waves.js"></script>
<!-- Demo Js -->
<script src="~/Content/Theme/Admin/js/demo.js"></script>
<!-- Custom Js -->
<script src="~/Content/Theme/Admin/js/admin.js"></script>
<script src="~/Content/Theme/Admin/js/pages/tables/jquery-datatable.js"></script>
