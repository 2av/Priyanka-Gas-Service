}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Identity Card</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/Style/style.css" rel="stylesheet" />
    <style>
body
{
	
}
.main-div
{
	-webkit-print-color-adjust: exact;
    background-color:#fff;width: 710px;height:345px;border:10px solid #ad1206;margin:10% auto;
}
.main-div1
{
	background-color:#fff;
	padding:10px;
}
.firstdiv
{
	
 }
.txtname
{
	font-size:20px;
	padding-top: 20px;
    padding-bottom: 15px;
	text-align:center;
}
.img-des
{
	width:200px;
	height:200px;
	/*position: relative;
    top: 20px;	    
    left: 10px;*/
	border-radius: 50%;
    border: 2px solid #e3e3e3;
}
.hr1
{
	margin-bottom:0px;
	border: 4px solid #da251c;
}
.hr2
{
	margin-top:2px;
	border: 3px solid #22297a;
	margin-bottom:5px;
}
.hr3
{
	margin-top:0px;
	margin-bottom:5px;
}
.logo
{
	margin-bottom: 10px;
    position: absolute;
    width: 129px;
    right: 0;
    top: -19px;
}


.billarea-td1{
    border-bottom: 2px solid #412560;
    font-size: 25px;
}
.billarea-td2 {
 
    color: white;
    text-align: center;
    line-height: 1px;
    height: 30px;
    border-bottom: 2px solid rgb(34,41,122);
    background-color: rgb(34,41,122);
    padding: 14px 0px 10px 0;
}

.detailarea{
    position:relative;
    height:100%;
}
.bottom-area{
    
}
.personal-details .title{
    font-weight:bold;
}
    </style>
</head>
<body>

    <div class="row main-div" style="">
        <table style="width:100%; height:350px">
            <tbody>
                <tr>
                    <td style="width:200px">
                        <div class="col-lg-12 firstdiv" style="text-align:center">
                            @if (!string.IsNullOrEmpty(Model.ProfileImage))
                            {
                                <img src="~/Uploads/@Model.ProfileImage"  onerror="setdefaultimage(this)" class="img-des" style="width:200px;height:200px;top: 20px;left: 10px;border-radius: 50%;border: 2px solid #e3e3e3;"/>
                            }
                            else
                            {
                                <img src="~/Content/Images/Icard/default.png" onerror="setdefaultimage(this)" class="img-des" style="width:200px;height:200px;top: 20px;left: 10px;border-radius: 50%;border: 2px solid #e3e3e3;"/>
                            }
                            <p class="txtname">@Model.FirstName @Model.LastName</p>
                        </div>
                    </td>
                    <td style="vertical-align:top">
                        
                        <div class="col-lg-12 detailarea" style="">
                        <h2 style="color:#e43d04;position:relative">Priyanka Gas Service
                            <p style="font-size: 1.4rem;position: absolute;color:#080842;">9320102179 / 9324778914 / 9819933648</p>
                            @if (Model.CompanyName!=null && Model.CompanyName.ToLower() == "HP Gas".ToLower())
                            {
                              <img src="~/Content/Images/Icard/hpgas.jpg" class="logo" />
                            }
                            else
                            {
                            <img src="~/Content/Images/Icard/gaspointlogo.png" class="logo" />
                            }
                            </h2>
                            <hr class="hr1">
                            <hr class="hr2">
                            <div class="personal-details">
                                <div class="details">
                                    <span class="title">Employee Code&nbsp;:</span>
                                    <span class="description">@Model.EmployeeCode</span>
                                </div>
                                <div class="details">
                                    <span class="title">Position&nbsp;&nbsp;&nbsp;&nbsp;:</span>
                                    <span class="description">@Model.Position</span>
                                </div>
                                <div class="details">
                                    <span class="title">Mobile No&nbsp;:</span>
                                    <span class="description">@Model.MobileNo / @Model.AlternateNo</span>
                                </div>
                                <div class="details">
                                    <span class="title">Address&nbsp;&nbsp;&nbsp;&nbsp;:</span>
                                    <span class="description">@Model.Address</span>
                                </div>
                            </div>
                            
                            <!-- <hr class="hr3"> -->
                            <div class="bottom-area" style="position:absolute;bottom:45px;color:#080842;">
                                <img src="~/Content/Images/Icard/hr.png" style="width:100%;" />
                                <p style="font-size:12px;text-align:center;font-weight:bold">

                                    REC/1230/B, GROUND FLOOR, KAMALA NEHRU NAGAR,<br />
                                    JASMINE MILL ROAD, DHARAVI,MUMBAI-400 017. Mob.: 78640 00999<br />
                                    
                                </p>
                                
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row" style="display:none">
        <div class="col-lg-6 main-div1">
            <div class="row">
                <div class="col-lg-12">
                    <hr class="hr1" style="margin-top:4px;">
                    <hr class="hr2">
                    <img src="hr.png" style="width:100%;" />
                    <p>
                        &raquo; Rule one Rule one Rule one Rule one Rule one Rule one Rule one
                    </p>
                    <p>
                        &raquo; Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one
                    </p>
                    <p>
                        &raquo; Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one
                    </p>
                    <p>
                        &raquo; Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one
                    </p>
                    <p>
                        &raquo; Rule one Rule one Rule one Rule one Rule one Rule one Rule one
                    </p>
                    <p>
                        &raquo; Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one Rule one
                    </p>
                    <p>
                        &raquo; Rule one Rule one Rule one Rule one Rule one
                    </p>
                    <img src="hr.png" style="width:100%;" />
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
<script>
    function setdefaultimage(img) {
        $(img).attr("src", "~/Content/Images/Icard/default.png");
    }
</script>
</html>
